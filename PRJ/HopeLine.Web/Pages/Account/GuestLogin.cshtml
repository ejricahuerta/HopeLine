@page
@model HopeLine.Web.Pages.Account.GuestLoginModel
@{
    ViewData["Title"] = "GuestLogin";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br/>
<div class="row">
    <div class="col-md-12" style=" width: 100%; align-items: center; justify-content: space-around; display: flex; float: none;">
        <section>
            <form method="post">
                <h4>Anonymous Login</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Please Enter a Anonymous Name</label>
                    <input class="form-control" placeholder="Anonymous Name"  required autofocus/>
                    <!--<span asp-validation-for="Input.Email" class="text-danger"></span>-->
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </form>
        </section>
    </div>
</div>