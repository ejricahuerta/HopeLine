@page
@model HopeLine.Web.Pages.AudioChatModel
@{
    ViewData["Title"] = "AudioChat";
}

<p></p>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-3 bg-light m-40 p-40">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Topics</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Depression</td>
                        <td class="form-group">
                            <input type="checkbox" value="depression" style="width: 20px; height: 20px;" class="pull-right">
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Bullying</td>
                        <td class="form-group">
                            <input type="checkbox" value="bullying" style="width: 20px; height: 20px;" class="pull-right">
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Phonbia</td>
                        <td class="form-group">
                            <input type="checkbox" value="phonbia" style="width: 20px; height: 20px;" class="pull-right" checked>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="main col-md-9">
            <div class="row">
                <div class="well">
                    <h1>Audio Chat</h1>
                </div>
            </div>
        </div>
 <div class="main col-md-9">
            <div class="row">
                <div class="well">
                    <h1>Realtime communication with WebRTC</h1>          
                              
                    <div>
                        <button id="startButton">Start</button>
                        <button id="callButton">Call</button>
                        <button id="hangupButton">Hang Up</button>
                    </div>
                  
                    <script src="https://cdn.socket.io/socket.io-1.0.0.js"></script>
                    <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
                    <script src="~/js/main.js"></script>
                </div>
            </div>
        </div>

    </div>
</div>
